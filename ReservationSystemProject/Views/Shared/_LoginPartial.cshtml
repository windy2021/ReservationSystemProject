@using Microsoft.AspNetCore.Identity
@using ReservationSystemProject.Data
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject ApplicationDbContext ContextDb



@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item mx-2">
        <a class="nav-link navs text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @ContextDb.People.FirstOrDefault(p => p.Email == User.Identity.Name).FullName!</a>
    </li>
    <li class="nav-item mx-2">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link text-light btn btn-primary">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item mx-2">
        <a class="nav-link navs text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item mx-2">
        <a id="regis" class="nav-link navs text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}

