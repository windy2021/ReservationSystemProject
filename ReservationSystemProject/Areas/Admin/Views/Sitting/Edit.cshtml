@model ReservationSystemProject.Areas.Admin.Models.Sitting.Edit
@{
    ViewData["Title"] = "Edit Sitting";
}

<div class="views">
    <h1 class="mt-3 mb-2 ">Edit Sitting</h1>

    <div class="table-container border rounded mt-3 col-5">
        <form asp-action="Edit" class="row g-3 m-2">
            <div class="form-group col-12">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Start" class="control-label"></label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="End" class="control-label"></label>
                <input asp-for="End" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="IsPrivate" class="control-label"></label>
                <input asp-for="IsPrivate" class="form-check-input big-checkbox" type="checkbox" />
                <span asp-validation-for="IsPrivate" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="IsClosed" class="control-label"></label>
                <input asp-for="IsClosed" class="form-check-input big-checkbox" type="checkbox" />
                <span asp-validation-for="IsPrivate" class="text-danger"></span>
            </div>
            <div class="form-group col-12 d-flex justify-content-center">
                <input type="submit" value="Edit" class="btn btn-primary col-3 align-self-center me-1" />
                <a asp-action="Index" class="btn btn-primary col-3 align-self-center ms-1">Back to List</a>
            </div>
        </form>
    </div>
</div>