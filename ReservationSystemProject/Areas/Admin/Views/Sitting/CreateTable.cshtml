@model ReservationSystemProject.Areas.Admin.Models.Sitting.CreateTable
@{ 
    ViewData["Title"] = "Add Table";
}

<div class="views">
    <h1 class="mt-3 mb-2">Add Table</h1>

<form asp-action="CreateTable" class="row g-3 m-2">
    <div class="form-group col-12">
        <label asp-for="AreaId" class="control-label"></label>
        <input asp-for="AreaId" value="@Model.AreaId" class="form-control" readonly />
    </div>
    <div class="form-group col-12">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-12 d-flex justify-content-center">
        <input type="submit" value="Add" class="btn btn-primary col-4 align-self-center me-1" />
        <a asp-action="Index" class="btn btn-primary col-4 align-self-center ms-1">Back to List</a>
    </div>
</form>
</div>